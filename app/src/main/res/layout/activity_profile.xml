<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <ImageView
            android:id="@+id/coin_image"
            android:src="@drawable/ic_coins"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/coins"
            android:text="Your coins"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layoutDirection="rtl"
            android:onClick="goToStore"
            android:src="@drawable/shop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingRight="30dp"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/profile_top_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        android:gravity="center"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        >


        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="false"
            android:paddingTop="0dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">


            <ImageView
                android:id="@+id/profile_img_post"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignStart="@+id/view2"
                android:layout_alignTop="@+id/view2"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/undressedtoptrans"></ImageView>
            <ImageView
                android:id="@+id/profile_img_post2"
                android:layout_width="match_parent"
                android:layout_marginTop="-10.5dp"
                android:layout_height="70dp"
                android:layout_alignStart="@+id/view2"
                android:layout_alignTop="@+id/profile_img_post"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/undressedbottomtrans"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profie_info"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/view2"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/profilepostpadding"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/posts"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="19"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/opensans_light"
                        android:text="videos"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/profilepostpadding"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/friends"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="20"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/opensans_light"
                        android:text="friends"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/profilepostpadding"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/days"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:fontFamily="@font/opensans_light"
                        android:text="days"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/sign_out"
                android:layout_width="230dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_transparent"
                android:text="Sign out"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="230dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_transparent"
                android:text="Edit Profile"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/profile_user_info"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profile_top_part"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/profile_id"
            android:layout_weight="0"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Profile ID: "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/profile_username"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/opensans_semibold"
            android:text="Username"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/profile_instruments"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/opensans_semibold"
            android:text="Instrument(s):"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/profile_years"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_semibold"
            android:text="Genre(s):"
            android:textColor="@color/black"
            android:textSize="14sp" />


    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_marginTop="160dp"
        android:clickable="true"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:focusable="true"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toTopOf="@id/navigationViewPerform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_user_info" />



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationViewPerform"
        style="@style/Widget.Design.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/menu_state_list"
        app:itemTextColor="@drawable/menu_state_list"
        app:labelVisibilityMode="labeled"

        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav" />

</android.support.constraint.ConstraintLayout>