<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Profile">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/coin_image"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/coins_white"
            android:contentDescription="Coin Image" />

        <TextView
            android:id="@+id/coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:text="Your coins"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layoutDirection="rtl"
            android:onClick="goToStore"
            android:layout_marginEnd="30dp"
            android:src="@drawable/shop"
            android:contentDescription="Shop Button" />
    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:id="@+id/profile_top_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:rowCount="3"
        android:columnCount="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar">

        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_columnWeight="2"
            android:background="@drawable/border"
            >

            <ImageView
                android:id="@+id/profile_img_post"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-15dp"
                android:scaleType="centerInside"
                android:src="@drawable/undressedtoptrans"/>

            <ImageView
                android:id="@+id/profile_img_post2"
                android:layout_width="match_parent"
                android:layout_height="65dp"

                android:layout_gravity="center_vertical"
                android:layout_marginTop="-0.5dp"
                android:scaleType="centerInside"
                android:src="@drawable/undressedbottomtrans"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posts"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="19"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_light"
                android:text="hrs practiced"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friends"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_light"
                android:text="coins earned"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posts2"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="19"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_light"
                android:text="videos uploaded"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/friends2"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="20"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_light"
                android:text="feedback given"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:id="@+id/profile_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_top_part"
        tools:layout_editor_absoluteY="260dp">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_bass" />


    </LinearLayout>


    <TextView
        android:id="@+id/VideoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:gravity="center"
        android:fontFamily="@font/opensans_bold"
        android:text="Videos"
        android:background="@drawable/border"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/profile_user_info"
        app:layout_constraintBottom_toTopOf="@id/gridView"
        app:layout_constraintStart_toStartOf="parent" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@color/lightGrey"
        android:clickable="true"
        android:columnWidth="100dp"
        android:drawSelectorOnTop="true"
        android:focusable="true"
        android:gravity="center"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp"
        app:layout_constraintTop_toBottomOf="@id/VideoLabel"
        app:layout_constraintBottom_toTopOf="@id/navigationViewPerform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationViewPerform"
        style="@style/Widget.Design.BottomNavigationView12"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/menu_state_list"
        app:itemTextColor="@drawable/menu_state_list"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav" />

</android.support.constraint.ConstraintLayout>