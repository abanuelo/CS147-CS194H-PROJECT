<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home"
    tools:context=".Profile"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/shop_button"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/shopping_cart" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_bold"
            android:text="Jemi"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp" />

        <Button
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/buttonoval"
            android:fontFamily="@font/opensans_semibold"
            android:text="Sign Out" />
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/animation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:adjustViewBounds="true"
        android:minHeight="200dp"
        android:paddingTop="30dp"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        />
    />

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name:"
            android:fontFamily="@font/proxima_novona"
            android:id="@+id/textforname"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="75dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/proxima_novona_bold"
            android:hint="Name"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textforusername"
            android:text="Username:"
            android:fontFamily="@font/proxima_novona"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/username"
            android:fontFamily="@font/proxima_novona_bold"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5sp"
            android:background="@null"
            android:textColor="@color/black"
            android:hint="Username" />

    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textforinstruments"
            android:text="Genres:"
            android:fontFamily="@font/proxima_novona"
            android:layout_width="75dp"
            android:textColor="@color/black"

            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="75dp"
            android:fontFamily="@font/proxima_novona_bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/genre"
            android:background="@null"
            android:hint="Genre"
            android:textColor="@color/black"
            android:layout_marginBottom="5sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textforinstruments2"
            android:text="Instruments:"
            android:fontFamily="@font/proxima_novona"
            android:layout_width="90dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="90sp"
            android:fontFamily="@font/proxima_novona_bold"
            android:layout_height="wrap_content"
            android:id="@+id/instrument"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:background="@null"
            android:hint="Instrument"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationViewPerform"
        style="@style/Widget.Design.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/menu_state_list"
        app:itemTextColor="@drawable/menu_state_list"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav" />

</LinearLayout>