<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeHiFi2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TimeElasped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/opensans_bold"
        android:text="Time Elapsed:"
        android:textSize="18sp" />

    <Chronometer
        android:id="@+id/PracticeStopwatch"
        android:layout_width="168dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/opensans_bold"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:text="@tools:sample/date/hhmmss" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/routineTitle"/>

    <TextView
        android:id="@+id/musicGoalsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/opensans_bold"
        android:text="Music Goals"
        android:textSize="18sp" />
    <ListView
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/tasks"
        android:layout_marginBottom="20dp">
    </ListView>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Done"
        android:onClick="backHome"
        android:theme="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/firstTutorial"
        android:text="False"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>