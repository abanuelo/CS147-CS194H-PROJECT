<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeHiFi2"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >

        <ImageView
            android:id="@+id/coin_image"
            android:src="@drawable/ic_coins"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/sideGaps"/>

        <TextView
            android:paddingLeft="20dp"
            android:id="@+id/coins"
            android:text="-1"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="INSERT ROUTINE HERE"
            android:textColor="@color/white"
            android:id="@+id/routineTitle"
            android:gravity="center_horizontal"/>

        <ImageView
            android:layoutDirection="rtl"
            android:onClick="goToStore"
            android:src="@drawable/shop"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingRight="@dimen/sideGaps"
            android:layout_width="60dp"
            android:layout_height="30dp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/TimeElasped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Time Elapsed:"
        android:textSize="30sp"
        android:background="@color/grayBckgrd"
        android:gravity="center_horizontal"/>

    <Chronometer
        android:id="@+id/PracticeStopwatch"
        android:layout_width="168dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/opensans_bold"
        android:textAlignment="center"
        android:textSize="36sp"
        tools:text="@tools:sample/date/hhmmss" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/routineTitle"/>-->

    <TextView
        android:id="@+id/musicGoalsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Music Goals"
        android:textSize="30sp"
        android:background="@color/grayBckgrd"
        android:gravity="center_horizontal"/>
    <ListView
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/tasks"
        android:layout_marginBottom="20dp">
    </ListView>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Done"
        android:onClick="backHome"
        android:theme="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/firstTutorial"
        android:text="False"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>