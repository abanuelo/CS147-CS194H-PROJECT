<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_background"
    tools:context=".practice_goal_met"
    >

    <TextView
        android:id="@+id/PracticeGoalMet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="proxima_novona_bold"
        android:text="Goal  Met!"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PracticeGoalMetMessage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_novona"
        android:text="Sample Text"
        android:textSize="30sp"
        android:translationZ="2dp"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/PracticeGoalAvatarGIF"
        app:layout_constraintBottom_toBottomOf="@id/PracticeGoalAvatarGIF"
        app:layout_constraintVertical_bias="0.25"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/PracticeGoalAvatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/PracticeGoalDone"
        app:layout_constraintTop_toBottomOf="@id/PracticeGoalMet"
        app:layout_constraintVertical_bias="0.49"></ImageView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/PracticeGoalAvatarGIF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/PracticeGoalDone"
        app:layout_constraintTop_toBottomOf="@id/PracticeGoalMet"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/PracticeGoalDone"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="32dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="9dp"
        android:text="Done!"
        android:background="@drawable/buttonoval"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PracticeAvatar"
        app:layout_constraintVertical_bias="0.59000003"
        android:onClick="onClick"
        />


</android.support.constraint.ConstraintLayout>