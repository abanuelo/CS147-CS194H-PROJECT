<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ShopTitle"
            android:paddingTop="10dp"
            android:text="Shop"
            android:paddingLeft="180dp"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/coin_image"
            android:paddingTop="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="40dp"
            android:src="@drawable/ic_coins" />

        <TextView
            android:id="@+id/user_coins"
            android:paddingLeft="10dp"
            android:text="Coins"
            android:fontFamily="@font/opensans_semibold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/left_arrow"
            android:scaleX="-1"
            android:src="@drawable/ic_arrow_point_to_right"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <HorizontalScrollView
            android:layout_gravity="center_horizontal"
            android:layout_width="340dp"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:id="@+id/HatView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/first_container"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@color/white"
                        android:id="@+id/first_item"
                        android:drawableLeft="@drawable/jemi_tiny_blue_hat"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="$500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/second_container"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/second_item"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/jemi_tiny_orange_hat"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="$1000"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/third_container"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@color/white"
                        android:id="@+id/third_item"
                        android:drawableLeft="@drawable/jemi_tiny_blue_hat"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="$1500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourth_container"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/fourth_item"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/jemi_tiny_orange_hat"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="$2000"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fifth_container"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@color/white"
                        android:id="@+id/fifth_item"
                        android:drawableLeft="@drawable/jemi_tiny_blue_hat"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="$2500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sixth_container"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/sixth_item"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/jemi_tiny_orange_hat"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="$3000"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/right_arrow"
            android:src="@drawable/ic_arrow_point_to_right"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/left_arrow_2"
            android:scaleX="-1"
            android:src="@drawable/ic_arrow_point_to_right"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <HorizontalScrollView
            android:layout_gravity="center_horizontal"
            android:layout_width="340dp"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:id="@+id/ShirtView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/first_container_shirts"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@color/white"
                        android:id="@+id/first_item_shirt"
                        android:drawableLeft="@drawable/jemi_shirt_green"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="$500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/second_container_shirts"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/second_item_shirt"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/jemi_shirt_pink"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="$1000"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/third_container_shirts"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@color/white"
                        android:id="@+id/third_item_shirt"
                        android:drawableLeft="@drawable/jemi_shirt_green"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="$1500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fourth_container_shirts"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/fourth_item_shirt"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/jemi_shirt_pink"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="$2000"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fifth_container_shirts"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:background="@color/white"
                        android:id="@+id/fifth_item_shirt"
                        android:drawableLeft="@drawable/jemi_shirt_green"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:text="$2500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sixth_container_shirts"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/sixth_item_shirt"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/jemi_shirt_pink"
                        android:paddingLeft="9dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="$3000"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/right_arrow_2"
            android:src="@drawable/ic_arrow_point_to_right"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>


    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/avatarRewardsShop"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_monster_baby" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ItemDetail"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/clock_trophy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:text="Place Description of Item Here"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/opensans_semibold"
                android:text="Buy Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>