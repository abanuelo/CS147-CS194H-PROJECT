            <LinearLayout
                android:id="@+id/constrained_view"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_marginTop="40dp"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/horizontalscrollview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scrollbars="none"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:id="@+id/shapeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/none_icon"
                            android:paddingLeft="9dp" />

                        <Button
                            android:id="@+id/button2"
                            android:drawableLeft="@drawable/jemi_tiny_blue_hat"
                            android:paddingLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button3"
                            android:drawableLeft="@drawable/jemi_tiny_orange_hat"
                            android:paddingLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:text="0 Coins"
                    android:textSize="10sp" />
                <Button
                    android:id="@+id/buy_hat"
                    android:paddingLeft="2dp"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:background="@drawable/buttonoval"
                    android:onClick="buyHats"
                    android:text="Buy"
                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/constrained_view2"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">



                <HorizontalScrollView
                    android:id="@+id/horizontalscrollview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scrollbars="none"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:id="@+id/shapeLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button12"
                            android:drawableLeft="@drawable/none_icon"
                            android:paddingLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button22"
                            android:drawableLeft="@drawable/jemi_shirt_green"
                            android:paddingLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button32"
                            android:drawableLeft="@drawable/jemi_shirt_pink"
                            android:paddingLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/price_tag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Coins"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    />
                <Button
                    android:id="@+id/buy_shirts"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="2dp"
                    android:layout_width="40dp"
                    android:layout_height="15dp"
                    android:background="@drawable/buttonoval"
                    android:text="Buy Shirt"
                    android:onClick="buyShirt"
                    />
            </LinearLayout>
        </LinearLayout>


