<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewRoutine"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/opensans_light"
        android:layout_marginTop="4dp"
        android:text="Create New Routine"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/inputTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:textColorHint="#808080"
        android:textColor="@color/black"
        android:hint="Routine Title (e.g., Weekend-practice)"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/opensans_bold"
        android:text="Musical Goals:"
        android:textSize="18sp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add some musical goals in your routine! \s Examples include: Warm-up, Practice Apreggios"
        android:id="@+id/routineHelpInfo"
        />-->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:theme="@style/FontOpenSansSemiBold"
        android:id="@+id/listOfGoals">

    </ListView>
    <!--<View
        android:id="@+id/DividerBetweenVideoAndComments"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"

        ></View>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/newGoal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_bold"
            android:textColorHint="#808080"
            android:textColor="@color/black"
            android:hint="Musical goals (e.g., Practice Arpeggios)"
            android:textSize="16dp"/>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Goal"
            android:layout_gravity="fill_vertical|end"
            android:theme="@style/AppTheme.RoundedCornerMaterialButton"
            android:textColor="@color/white"
            android:onClick="addGoal"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Routine"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:theme="@style/AppTheme.RoundedCornerMaterialButton"
        android:onClick="finishRoutine"/>

</LinearLayout>