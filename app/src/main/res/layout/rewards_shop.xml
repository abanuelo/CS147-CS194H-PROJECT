            <Button
                android:layout_width="60dp"
                android:layout_height="82dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/buttonoval"
                android:text="Buy"
                />
        </LinearLayout>
        <!--End Ab's Additions-->

    </LinearLayout>
