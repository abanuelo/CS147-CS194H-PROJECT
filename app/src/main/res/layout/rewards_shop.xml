<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_coins"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/pifepoints"
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="#000"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatarRewardsShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:maxWidth="350dp"
                android:maxHeight="200dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_monster_baby" />

            <ImageView
                android:id="@+id/hat"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/shirt"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="120dp" />

        </RelativeLayout>

        <!--Ab's additions-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="-50dp"
            android:translationZ="2dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="83dp"
                android:text="70 Coins"
                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="82dp"
                android:layout_marginTop="11dp"
                android:text="70 Coins"
                />
        </LinearLayout>
        <!--End Ab's Additions-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/constrained_view"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_marginTop="80dp"
                android:layout_height="wrap_content">


                <HorizontalScrollView
                    android:id="@+id/horizontalscrollview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scrollbars="none"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:id="@+id/shapeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button1"
                            android:drawableLeft="@drawable/none_icon"
                            android:paddingLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button2"
                            android:drawableLeft="@drawable/jemi_tiny_blue_hat"
                            android:paddingLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button3"
                            android:drawableLeft="@drawable/jemi_tiny_orange_hat"
                            android:paddingLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/constrained_view2"
                android:layout_centerHorizontal="true"
                android:layout_width="80dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:id="@+id/horizontalscrollview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scrollbars="none"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp">

                    <LinearLayout
                        android:id="@+id/shapeLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button12"
                            android:drawableLeft="@drawable/none_icon"
                            android:paddingLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button22"
                            android:drawableLeft="@drawable/jemi_shirt_green"
                            android:paddingLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/button32"
                            android:drawableLeft="@drawable/jemi_shirt_pink"
                            android:paddingLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
        </LinearLayout>

        <!--Ab's additions-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="5dp">
            <Button
                android:layout_width="60dp"
                android:layout_height="83dp"
                android:background="@drawable/buttonoval"
