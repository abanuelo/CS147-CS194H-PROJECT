<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/practice"
    android:layout_height="match_parent"
    tools:context=".PracticePlaying">

    <TextView
        android:id="@+id/PracticeGoalMet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Goal Not Met!"
        android:visibility="invisible"
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/PracticeTodaysGoal"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Today's Goal:   "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/PracticeTodaysGoalMinutes"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="3dp"


        android:layout_marginEnd="16dp"

        android:minWidth="200dp"

        android:prompt="@string/app_name"
        app:layout_constrainedHeight="@+id/PracticeTodaysGoal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/PracticeTodaysGoal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="spread" />


    <Chronometer
        android:id="@+id/PracticeStopwatch"
        android:layout_width="168dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/PracticePlayPause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PracticeTodaysGoal"
        app:layout_constraintVertical_chainStyle="spread_inside"
        tools:text="@tools:sample/date/hhmmss" />



    <Button
        android:id="@+id/PracticePlayPause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PracticeStopwatch"
        android:onClick="onClick"
        />

    <ImageView
        android:id="@+id/PracticeAvatar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="30dp"
        app:layout_constraintBottom_toTopOf="@+id/PracticeDone"
        app:layout_constraintTop_toBottomOf="@id/PracticePlayPause"
        android:visibility="gone"></ImageView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/PracticeAvatarGIF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:minHeight="500dp"
        android:paddingLeft="40dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/PracticeDone"
        app:layout_constraintTop_toBottomOf="@+id/PracticePlayPause"
        tools:layout_editor_absoluteX="0dp"></pl.droidsonroids.gif.GifImageView>

    <Button
        android:id="@+id/PracticeDone"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/buttonoval"
        android:onClick="onClick"
        android:text="Done!"
        android:fontFamily="@font/opensans_semibold"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.59000003" />


</android.support.constraint.ConstraintLayout>