<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/renew_background"
    android:backgroundTint="#20FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Dashboard">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/reward"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:src="@drawable/reward"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="261dp" />

        <TextView
            android:id="@+id/avatar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:fontFamily="@font/proxima_novona_bold"
            android:text="AVATAR NAME"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="45dp"
            android:layout_height="48dp"
            android:src="@drawable/user_profile"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="261dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/avatarDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/practice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:fontFamily="@font/proxima_novona_bold"
            android:text="Practice"
            android:background="@drawable/buttonoval"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/perform"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:fontFamily="@font/proxima_novona_bold"
            android:text="Perform"
            android:background="@drawable/buttonoval"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/collab"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonoval"
            android:fontFamily="@font/proxima_novona_bold"
            android:text="Collab"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>