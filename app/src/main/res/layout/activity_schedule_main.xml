<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scheduler.ScheduleMain">


    <TextView
        android:padding="20sp"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:text="My Collaboration Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TableLayout
        android:id="@+id/table"
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:paddingTop="100sp"
        android:paddingBottom="30sp"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:layout_weight="1"
                android:id="@+id/title_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Day" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/title_start_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Start Time" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/title_end_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="End Time" />

            <TextView
                android:textAlignment="center"
                android:id="@+id/title_am_pm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="AM/PM" />


        </TableRow>


        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/sunday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Sunday" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/start_time_sun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1:00"
                android:ems="10"
                 />

            <EditText
                android:textAlignment="center"
                android:id="@+id/end_time_sun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="3:00"
                android:ems="10"
                />

            <Spinner
                android:textAlignment="center"
                android:id="@+id/am_pm_spinner_sun"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/monday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Monday" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/start_time_mon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1:00"
                 />

            <EditText
                android:textAlignment="center"
                android:id="@+id/end_time_mon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="3:00" />

            <Spinner
                android:textAlignment="center"
                android:id="@+id/am_pm_spinner_mon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/tuesday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tuesday" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/start_time_tues"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1:00" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/end_time_tues"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="3:00" />

            <Spinner
                android:textAlignment="center"
                android:id="@+id/am_pm_spinner_tues"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/wednesday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Wednesday" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/start_time_wed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1:00" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/end_time_wed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="3:00" />

            <Spinner
                android:textAlignment="center"
                android:id="@+id/am_pm_spinner_wed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/thursday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thursday" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/start_time_thur"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1:00" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/end_time_thur"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="3:00" />

            <Spinner
                android:textAlignment="center"
                android:id="@+id/am_pm_spinner_thur"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/friday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Friday" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/start_time_fri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1:00" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/end_time_fri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="3:00" />

            <Spinner
                android:textAlignment="center"
                android:id="@+id/am_pm_spinner_fri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textAlignment="center"
                android:id="@+id/saturday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Saturday" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/start_time_sat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1:00" />

            <EditText
                android:textAlignment="center"
                android:id="@+id/end_time_sat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="3:00" />

            <Spinner
                android:textAlignment="center"
                android:id="@+id/am_pm_spinner_sat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>

    <Button
        android:text="Schedule"
        android:id="@+id/schedule"
        android:layout_below="@+id/table"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_width="300sp">

    </Button>

</RelativeLayout>